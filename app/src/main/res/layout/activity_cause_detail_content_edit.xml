<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    android:visibility="gone"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kantutapp.bloodhope.DetailCauseActivity">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_edit_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        fancy:fb_defaultColor="#ffffff"
        fancy:fb_focusColor="#000000"
        fancy:fb_borderWidth="1dp"
        fancy:fb_borderColor="@color/colorAccent"
        fancy:fb_fontIconResource="&#xf040;"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="EDIT MY INFO"
        fancy:fb_textColor="#FF275B"
        fancy:fb_textSize="10sp"
        fancy:fb_textFontRes="@font/montserratbold"/>

    <com.kantutapp.bloodhope.utils.TextViewMontserratBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Collaborators"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"/>

    <com.kantutapp.bloodhope.utils.TextViewMontserratRegular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="If your Collaborator make a donation, donâ€™t forget to check it down!"
         android:textSize="10sp"
        android:textColor="@color/colorAccent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_collaborators"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        fancy:fb_defaultColor="@color/colorAccent"
        fancy:fb_focusColor="#000000"
        fancy:fb_borderWidth="1dp"
        fancy:fb_borderColor="@color/colorAccent"
        fancy:fb_radius="30dp"
        fancy:fb_text="DONE"
        fancy:fb_textColor="@color/colorWhite"
        fancy:fb_textSize="14sp"
        fancy:fb_textFontRes="@font/montserratbold"/>

</LinearLayout>
